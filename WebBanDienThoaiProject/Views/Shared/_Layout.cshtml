<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.2.0/css/all.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Site.css">
    <title>Web bán điện thoại</title>
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="navbar">
                <div class="logo">
                    <a href="@Url.Action("Index", "TrangChu")">
                        <img src="~/Content/Images/head-logo.png" alt="Logo" style="width: 125px">
                    </a>
                </div>

                <form class="search">
                    <input class="input_search" type="text" placeholder="Bạn tìm gì..." autocomplete="off" maxlength="100">
                    <button type="submit">
                        <i class="icon_search far fa-search"></i>
                    </button>
                </form>

                <nav>
                    <ul class="MenuItems">
                        <li>
                            <a href="@Url.Action("Index", "TrangChu")">
                                <i class="fas fa-home"></i> Home
                            </a>
                            <a href="@Url.Action("Index", "SanPham")">
                                <i class="fas fa-mobile-alt"></i> Product
                            </a>
                            <a href="@Url.Action("Index", "VeChungToi")">
                                <i class="fas fa-info"></i> About Us
                            </a>
                            <a href="@Url.Action("Index", "LienHe")">
                                <i class="fas fa-address-card"></i> Contacts
                            </a>
                            <div class="dropdown">
                                <a href="#">
                                    <i class="fas fa-user"></i> Account
                                </a>
                                <ul class="dropdown-content">
                                    <li>
                                        <a href="@Url.Action("DangNhap", "TaiKhoan")">Đăng Nhập</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("DangKy", "TaiKhoan")">Đăng Ký</a>
                                    </li>
                                </ul>
                            </div>
                            <a href="@Url.Action("Index", "GioHang")">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    @RenderBody()

    <!--Footer-->
    <div class="footer ">
        <div class="container ">
            <div class="_row center-item">
                <div class="footer-col-1 ">
                    <h3>Download Our App</h3>
                    <p>Download App for Android and iOS mobile phone.</p>
                    <div class="app-logo ">
                        <img src="~/Content/Images/play-store.png" alt=" ">
                        <img src="~/Content/Images/app-store.png" alt=" ">
                    </div>
                </div>
                <div class="footer-col-2 ">
                    <img src="~/Content/Images/footer-logo.png" alt="Logo ">
                    <p>Our Purpose Is To Sustainably Make the Plesure and Benefits of Sports Accessible to the Many.</p>
                </div>
                <div class="footer-col-3 ">
                    <h3>Contact us</h3>
                    <ul>
                        <li>0354.321.915</li>
                        <li>support@apple.com</li>
                        <li>admin@apple.com</li>
                        <li>admin@apple.com</li>
                    </ul>
                </div>
                <div class="footer-col-4 ">
                    <h3>Follow us</h3>
                    <ul>
                        <li>Facebook</li>
                        <li>Twitter</li>
                        <li>Instagram</li>
                        <li>Youtube</li>
                    </ul>
                </div>
            </div>
            <hr>
            <div class="copyright ">Copyright 2022 Apple Team</div>
        </div>
    </div>
</body>
</html>
